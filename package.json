{
  "name": "prueba-tecnica",
  "version": "1.0.0",
  "description": "Full stack application",
  "private": true,
  "scripts": {
    "ci": "npm run lint && npm run test && npm run build",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "eslint backend/src --ext .ts --fix",
    "lint:backend:check": "eslint backend/src --ext .ts",
    "lint:frontend": "eslint frontend/src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "lint:frontend:check": "eslint frontend/src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "npm run format:backend && npm run format:frontend",
    "format:backend": "prettier --write \"backend/src/**/*.{ts,js,json}\"",
    "format:frontend": "prettier --write \"frontend/src/**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "format:check": "npm run format:backend:check && npm run format:frontend:check",
    "format:backend:check": "prettier --check \"backend/src/**/*.{ts,js,json}\"",
    "format:frontend:check": "prettier --check \"frontend/src/**/*.{ts,tsx,js,jsx,json,css,scss}\"",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "jest --testTimeout=10000 --config backend/jest.config.js",
    "test:frontend": "cd frontend && vitest run",
    "test:frontend:ui": "cd frontend && vitest --ui",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc --project backend/tsconfig.json",
    "build:frontend": "cd frontend && tsc && vite build",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && ts-node src/index.ts",
    "dev:frontend": "cd frontend && vite",
    "start": "node backend/dist/index.js",
    "preview": "cd frontend && vite preview",
    "migrate": "cd backend && npx typeorm migration:run -d src/data-source.ts",
    "seed": "cd backend && ts-node src/seeds/user.seed.ts",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "rimraf backend/dist",
    "clean:frontend": "rimraf frontend/dist"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.0",
    "@types/pg": "^8.10.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.20",
    "jest": "^29.6.4",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.0",
    "sass": "^1.64.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.5",
    "vitest": "^0.34.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
}
